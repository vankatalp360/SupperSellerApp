@page
@model AllModel
@{
    ViewData["Title"] = "All Categories";
}

<h2>All Categories</h2>
<a asp-area="Admin" asp-page="/Category/Create" class="btn btn-success">
    <i class="glyphicon glyphicon-plus"></i>Create new Category
</a>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>SubCategories</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @Html.DisplayFor(m => m.Categories)
    </tbody>
</table>
