@model UsersConciseViewModel

<tr>
    <td>@Model.UserName</td>
    <td>@Model.Email</td>
    <td>@Model.City</td>
    <td>@Model.RegisteredDate</td>
    <td>@Model.Ads</td>
    <td>@Html.DisplayFor(model => model.IsAdmin)</td>
    <td>
        <a asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@Model.Id"
           class="btn btn-default">
            Details
        </a>
        <a asp-area="Admin" asp-controller="Users" asp-action="ChangeUserPassword" asp-route-id="@Model.Id"
           class="btn btn-warning">
            Change password
        </a>
        @if (@Model.isLock)
        {
            <a asp-area="Admin" asp-controller="Users" asp-action="Unban" asp-route-id="@Model.Id"
               class="btn btn-primary">
                Unban
            </a>
        }
        else
        {
            <a asp-area="Admin" asp-controller="Users" asp-action="Ban" asp-route-id="@Model.Id"
               class="btn btn-danger">
                Ban
            </a>
        }
    </td>
</tr>

