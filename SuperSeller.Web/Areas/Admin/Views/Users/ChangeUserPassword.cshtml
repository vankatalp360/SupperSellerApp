@model ChangePasswordBindingModel
@{
    ViewData["Title"] = "Change User Password";
}
<h2>Change @Model.Username password</h2>

<form method="post" class="form-horizontal">
    <input asp-for="Username" value="@Model.Username" style="display: none"/>
    @Html.FormGroupFor(model => model.Password)
    @Html.FormGroupFor(model => model.ConfirmPassword)
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Change Password" class="btn btn-success" />
            <a onclick="history.go(-1)" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>

