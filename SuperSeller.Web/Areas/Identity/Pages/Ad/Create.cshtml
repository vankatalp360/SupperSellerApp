@page
@model SuperSeller.Web.Areas.Identity.Pages.Ad.CreateModel
@{
    ViewData["Title"] = "Create Ad";
}
<h2>Create Ad</h2>

<form method="post" class="form-horizontal" enctype="multipart/form-data">
    <input asp-for="Input.CreatorId" value="@Model.CreatorId" style="display: none"/>
    <div class="form-group">
        <label for="CategoryId" class="control-label col-sm-2">Select Category</label>
        <div class="col-sm-10">
            <select class="form-control" id="CategoryId" name="CategoryId">
                @foreach (var category in Model.Categories)
                {
                    <optgroup label="@category.Name">
                        @foreach (var subCategory in category.SubCategories)
                        {
                            <option value="@subCategory.Id">@subCategory.Name</option>
                        }
                    </optgroup>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="ConditionId" class="control-label col-sm-2">Condition</label>
        <div class="col-sm-10">
            <select class="form-control" id="ConditionId" name="ConditionId">
                @foreach (var condition in Model.Conditions)
                {
                    <option value="@condition.Id">@condition.Name</option>
                }
            </select>
        </div>
    </div>
    @Html.FormGroupFor(model => model.Input.Title)
    @Html.FormGroupFor(model => model.Input.Price)
    @Html.FormGroupFor(model => model.Input.Description)
    @Html.FormGroupFor(model => model.Input.Region)
    @Html.FormGroupFor(model => model.Input.City)
    @Html.FormGroupFor(model => model.Input.PostalCode)
    @Html.FormGroupFor(model => model.Input.Email)
    @Html.FormGroupFor(model => model.Input.ContactNumber)
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input asp-for="@Model.Input.FirstPicturePath"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input asp-for="@Model.Input.SecondPicturePath"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input asp-for="@Model.Input.ThirdPicturePath"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success"/>
            <a onclick="history.go(-1)" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>

